@{
  Layout = "_Layout";
}

<div class="container">
<h1>Recipes</h1>
<hr />
<h2>Here are the Recipes:</h2>
@if (@Model.Count != 0)
{
  <ol>
    @foreach (var recipe in @Model)
    {
      <li><a href='/recipes/@recipe.GetId()'>@recipe.GetName()</a> <br>  <a href="/recipes/@recipe.GetId()/update">Edit</a> | <a method="post" href="/recipes/@recipe.GetId()/delete">Delete</a> </li>
      <p>Recipe instruction: @recipe.GetInstruction()</p>
      <p> Recipe Rate: @recipe.GetRate()</p>
    }
  </ol>
}
<h4><a href="/recipes/new" class="btn btn-primary">Add new recipe</a></h4>
<h4><a href="/categories" class="btn btn-primary">Show Category</a></h4>

</div>
